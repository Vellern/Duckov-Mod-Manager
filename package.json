{
  "name": "duckov-mod-manager",
  "version": "1.0.0",
  "description": "A mod manager for Escape from Duckov with Steam Workshop integration and translation support",
  "main": "dist/main.js",
  "scripts": {
    "dev": "npm run web:dev",
    "electron:dev": "npm run build:electron && electron .",
    "electron:watch": "tsx watch --tsconfig tsconfig.electron.json src/main.ts",
    "build": "npm run build:web && npm run build:electron",
    "build:web": "vite build",
    "build:electron": "tsc --project tsconfig.electron.json",
    "build:prod": "npm run build && node scripts/build-optimize.js",
    "build:verify": "node scripts/verify-build.js",
    "start": "electron .",
    "start:full": "npm run build && npm start",
    "dist": "npm run build:prod && npm run build:verify && electron-builder",
    "dist:win": "npm run build:prod && npm run build:verify && electron-builder --win",
    "dist:mac": "npm run build:prod && npm run build:verify && electron-builder --mac",
    "dist:linux": "npm run build:prod && npm run build:verify && electron-builder --linux",
    "dist:all": "npm run build:prod && npm run build:verify && electron-builder -mwl",
    "dist:dir": "npm run build:prod && electron-builder --dir",
    "dist:verify": "node scripts/verify-build.js --production",
    "clean": "rimraf dist web/dist release build-report.json verification-report.json",
    "clean:all": "npm run clean && rimraf node_modules",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "web:dev": "vite",
    "web:build": "vite build",
    "web:preview": "vite preview",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "mod-manager",
    "steam-workshop",
    "translation",
    "gaming"
  ],
  "author": "DMCK96",
  "license": "MIT",
  "dependencies": {
    "@xenova/transformers": "^2.17.1",
    "archiver": "^7.0.1",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "electron-squirrel-startup": "^1.0.1",
    "node-cache": "^5.1.2",
    "sqlite3": "^5.1.6",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/electron": "^1.6.12",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vitejs/plugin-react": "^4.1.0",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.5",
    "tsx": "^4.7.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}
